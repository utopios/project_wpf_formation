                            <TextBlock FontFamily="Consolas" FontSize="12" Text="Canvas.Left=&quot;10&quot;        ‚Üê Attached Property de Canvas" Margin="0,3,0,0"/>
                            <TextBlock FontFamily="Consolas" FontSize="12" Text="DockPanel.Dock=&quot;Top&quot;    ‚Üê Attached Property de DockPanel" Margin="0,3,0,0"/>
