                    <Border Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
                           CornerRadius="4" Padding="15" Margin="15,5,0,0">
                        <TextBlock FontFamily="Consolas" FontSize="11" TextWrapping="Wrap" xml:space="preserve">public static readonly DependencyProperty MonPropProperty =
    DependencyProperty.RegisterAttached(
        "MonProp",                          // Nom
        typeof(string),                      // Type
        typeof(MaClasse),                    // Classe propri√©taire
        new PropertyMetadata(OnChanged));    // Callback

public static string GetMonProp(DependencyObject obj)
