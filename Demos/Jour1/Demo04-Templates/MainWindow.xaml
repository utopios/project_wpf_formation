<Window x:Class="TemplatesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TemplatesDemo"
        Title="Démo - ControlTemplate et DataTemplate"
        Height="800" Width="1000"
        Background="#F5F5F5">

    <TabControl Margin="20">

        <!-- Tab 1: ControlTemplate -->
        <TabItem Header="ControlTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <TextBlock Text="ControlTemplate"
                              FontSize="28" FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="Redéfinir complètement l'apparence d'un contrôle"
                              Foreground="Gray" Margin="0,0,0,24"/>

                    <!-- Section: Bouton personnalisé -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                             Opacity="0.1" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Bouton avec effet Ripple"
                                      FontSize="18" FontWeight="SemiBold"
                                      Margin="0,0,0,16"/>

                            <WrapPanel>
                                <Button Content="Primary Action"
                                       Template="{StaticResource RippleButtonTemplate}"
                                       Background="{StaticResource PrimaryBrush}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       Padding="24,12"
                                       Margin="0,0,12,0"/>

                                <Button Content="Secondary"
                                       Template="{StaticResource RippleButtonTemplate}"
                                       Background="{StaticResource SecondaryBrush}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       Padding="24,12"
                                       Margin="0,0,12,0"/>

                                <Button Content="Success"
                                       Template="{StaticResource RippleButtonTemplate}"
                                       Background="{StaticResource SuccessBrush}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       Padding="24,12"
                                       Margin="0,0,12,0"/>

                                <Button Content="Désactivé"
                                       Template="{StaticResource RippleButtonTemplate}"
                                       Background="{StaticResource SecondaryBrush}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       Padding="24,12"
                                       IsEnabled="False"/>
                            </WrapPanel>

                            <TextBlock Text="Le ControlTemplate définit la structure visuelle complète du bouton.&#x0a;Les Triggers gèrent les états (hover, pressed, disabled)."
                                      Foreground="Gray"
                                      FontSize="12"
                                      Margin="0,16,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Section: ProgressBar circulaire -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                             Opacity="0.1" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="ProgressBar Circulaire"
                                      FontSize="18" FontWeight="SemiBold"
                                      Margin="0,0,0,16"/>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel Margin="0,0,30,0">
                                    <ProgressBar x:Name="Progress1"
                                                Template="{StaticResource CircularProgressTemplate}"
                                                Value="25"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                Margin="0,0,0,8"/>
                                    <TextBlock Text="25%" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,30,0">
                                    <ProgressBar Template="{StaticResource CircularProgressTemplate}"
                                                Value="50"
                                                Foreground="{StaticResource WarningBrush}"
                                                Margin="0,0,0,8"/>
                                    <TextBlock Text="50%" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,30,0">
                                    <ProgressBar Template="{StaticResource CircularProgressTemplate}"
                                                Value="75"
                                                Foreground="{StaticResource SuccessBrush}"
                                                Margin="0,0,0,8"/>
                                    <TextBlock Text="75%" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel>
                                    <ProgressBar Template="{StaticResource CircularProgressTemplate}"
                                                Value="100"
                                                Foreground="{StaticResource SecondaryBrush}"
                                                Margin="0,0,0,8"/>
                                    <TextBlock Text="100%" HorizontalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <TextBlock Text="Valeur: " VerticalAlignment="Center"/>
                                <Slider x:Name="ProgressSlider"
                                       Width="200"
                                       Minimum="0" Maximum="100"
                                       Value="{Binding Value, ElementName=Progress1}"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Value, ElementName=ProgressSlider, StringFormat={}{0:0}}"
                                          VerticalAlignment="Center"
                                          Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Section: TemplateParts -->
                    <Border Background="White" CornerRadius="8" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                             Opacity="0.1" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Concepts clés du ControlTemplate"
                                      FontSize="18" FontWeight="SemiBold"
                                      Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="TemplateBinding" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Gray">
                                        Lie une propriété du template à une propriété du contrôle templé.
                                        Ex: Background="{TemplateBinding Background}"
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="TemplatePart" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="Gray">
                                        Éléments nommés que le contrôle s'attend à trouver.
                                        Ex: PART_ContentHost dans TextBox
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- Tab 2: DataTemplate -->
        <TabItem Header="DataTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <TextBlock Text="DataTemplate"
                              FontSize="28" FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="Définir la présentation visuelle des données"
                              Foreground="Gray" Margin="0,0,0,24"/>

                    <!-- Section: Cartes de produits -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                             Opacity="0.1" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Cartes de Produits"
                                      FontSize="18" FontWeight="SemiBold"
                                      Margin="0,0,0,16"/>

                            <ItemsControl x:Name="ProductsItemsControl"
                                         ItemTemplate="{StaticResource ProductCardTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <TextBlock Text="Le DataTemplate définit comment chaque objet Product est affiché.&#x0a;Les DataTriggers changent l'apparence selon l'état du stock."
                                      Foreground="Gray"
                                      FontSize="12"
                                      Margin="0,16,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Section: Liste d'utilisateurs -->
                    <Border Background="White" CornerRadius="8" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                             Opacity="0.1" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Liste d'Utilisateurs"
                                      FontSize="18" FontWeight="SemiBold"
                                      Margin="0,0,0,16"/>

                            <ListBox x:Name="UsersListBox"
                                    ItemTemplate="{StaticResource UserListItemTemplate}"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0"
                                    MaxHeight="300">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                            <TextBlock Text="Chaque utilisateur est rendu avec le même template.&#x0a;L'état actif/inactif change la couleur du badge."
                                      Foreground="Gray"
                                      FontSize="12"
                                      Margin="0,16,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- Tab 3: ItemsControl -->
        <TabItem Header="ItemsControl avancé">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <TextBlock Text="ItemsControl et Panels"
                              FontSize="28" FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="Personnaliser le conteneur des éléments"
                              Foreground="Gray" Margin="0,0,0,24"/>

                    <!-- ItemsPanelTemplate -->
                    <Border Background="White" CornerRadius="8" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                             Opacity="0.1" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="ItemsPanelTemplate"
                                      FontSize="18" FontWeight="SemiBold"
                                      Margin="0,0,0,16"/>

                            <TextBlock Text="Définit le panel qui contient les éléments :"
                                      Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- StackPanel (vertical) -->
                                <StackPanel Margin="0,0,10,0">
                                    <TextBlock Text="StackPanel (défaut)"
                                              FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <ItemsControl>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <Border Background="{StaticResource PrimaryBrush}"
                                               Padding="10" Margin="2" CornerRadius="4">
                                            <TextBlock Text="Item 1" Foreground="White"/>
                                        </Border>
                                        <Border Background="{StaticResource SecondaryBrush}"
                                               Padding="10" Margin="2" CornerRadius="4">
                                            <TextBlock Text="Item 2" Foreground="White"/>
                                        </Border>
                                        <Border Background="{StaticResource SuccessBrush}"
                                               Padding="10" Margin="2" CornerRadius="4">
                                            <TextBlock Text="Item 3" Foreground="White"/>
                                        </Border>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- WrapPanel (horizontal) -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="WrapPanel (horizontal)"
                                              FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <ItemsControl>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <Border Background="{StaticResource PrimaryBrush}"
                                               Padding="10" Margin="2" CornerRadius="4">
                                            <TextBlock Text="Item 1" Foreground="White"/>
                                        </Border>
                                        <Border Background="{StaticResource SecondaryBrush}"
                                               Padding="10" Margin="2" CornerRadius="4">
                                            <TextBlock Text="Item 2" Foreground="White"/>
                                        </Border>
                                        <Border Background="{StaticResource SuccessBrush}"
                                               Padding="10" Margin="2" CornerRadius="4">
                                            <TextBlock Text="Item 3" Foreground="White"/>
                                        </Border>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>

                            <!-- UniformGrid -->
                            <TextBlock Text="UniformGrid (grille uniforme)"
                                      FontWeight="SemiBold" Margin="0,20,0,8"/>
                            <ItemsControl>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="4"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <Border Background="#E91E63" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#9C27B0" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#673AB7" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#3F51B5" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="4" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#2196F3" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="5" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#03A9F4" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="6" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#00BCD4" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="7" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                                <Border Background="#009688" Height="60" Margin="2" CornerRadius="4">
                                    <TextBlock Text="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                </Border>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
