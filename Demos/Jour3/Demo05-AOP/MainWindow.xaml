<Window x:Class="AopDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AopDemo.ViewModels"
        xmlns:local="clr-namespace:AopDemo.Converters"
        Title="Démo — AOP (Aspect-Oriented Programming) en WPF"
        Height="850" Width="1150"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <!-- Pas de DataContext en XAML : il est injecté par le conteneur DI -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" CornerRadius="8" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Aspect-Oriented Programming (AOP)"
                              FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="Annotations comportementales — les aspects modifient l'exécution sans toucher au code métier"
                              Foreground="Gray" FontSize="12" Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Indicateur IsDirty -->
                <Border Grid.Column="1" CornerRadius="15" Padding="15,6" VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E8F5E9"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock x:Name="DirtyIndicator" Text="Clean"
                              FontWeight="SemiBold" FontSize="12" Foreground="#2E7D32"/>
                </Border>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Colonne gauche : Formulaire -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Produit" FontSize="18" FontWeight="SemiBold"
                              Foreground="#2C3E50" Margin="0,0,0,20"/>

                    <!-- Name : [LogOnChange] [AutoDirty] [DependsOn] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,4">
                        <Run Text="NOM"/>
                        <Run Text=" [Log] [Dirty] [DependsOn]" Foreground="#8E44AD" FontFamily="Consolas" FontSize="9"/>
                    </TextBlock>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            Padding="10,8" Margin="0,0,0,12"/>

                    <!-- Category -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,4">
                        <Run Text="CATÉGORIE"/>
                        <Run Text=" [Log] [Dirty] [DependsOn]" Foreground="#8E44AD" FontFamily="Consolas" FontSize="9"/>
                    </TextBlock>
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                            Padding="10,8" Margin="0,0,0,12"/>

                    <!-- Price : [Clamp(0,10000)] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,4">
                        <Run Text="PRIX"/>
                        <Run Text=" [Clamp(0, 10000)]" Foreground="#E74C3C" FontFamily="Consolas" FontSize="9"/>
                    </TextBlock>
                    <TextBox Text="{Binding Price, UpdateSourceTrigger=LostFocus}"
                            Padding="10,8" Margin="0,0,0,12"/>

                    <!-- Quantity : [Clamp(0,9999)] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,4">
                        <Run Text="QUANTITÉ"/>
                        <Run Text=" [Clamp(0, 9999)]" Foreground="#E74C3C" FontFamily="Consolas" FontSize="9"/>
                    </TextBlock>
                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=LostFocus}"
                            Padding="10,8" Margin="0,0,0,12"/>

                    <!-- Discount : [Clamp(0,100)] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,4">
                        <Run Text="REMISE %"/>
                        <Run Text=" [Clamp(0, 100)]" Foreground="#E74C3C" FontFamily="Consolas" FontSize="9"/>
                    </TextBlock>
                    <TextBox Text="{Binding Discount, UpdateSourceTrigger=LostFocus}"
                            Padding="10,8" Margin="0,0,0,12"/>

                    <!-- Résultat calculé -->
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="12" Margin="0,5,0,15">
                        <StackPanel>
                            <TextBlock Text="{Binding FullDescription}" TextWrapping="Wrap"
                                      Foreground="#1565C0" FontSize="12"/>
                            <TextBlock Margin="0,5,0,0" FontSize="16" FontWeight="Bold" Foreground="#0D47A1">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Total : {0:C2}">
                                        <Binding Path="TotalPrice"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Boutons -->
                    <WrapPanel>
                        <Button Content="Charger" Command="{Binding LoadDataCommand}"
                               Padding="12,8" Margin="0,0,6,6"
                               Background="#3498DB" Foreground="White"/>
                        <Button Content="Sauvegarder" Command="{Binding SaveCommand}"
                               Padding="12,8" Margin="0,0,6,6"
                               Background="#27AE60" Foreground="White"/>
                        <Button Content="Test Clamp" Command="{Binding TestClampCommand}"
                               Padding="12,8" Margin="0,0,6,6"
                               Background="#E74C3C" Foreground="White"/>
                        <Button Content="Reset" Command="{Binding ResetCommand}"
                               Padding="12,8" Margin="0,0,6,6"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Colonne centrale : Log AOP en temps réel -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Log AOP en temps réel" Margin="0,0,0,10"
                              FontSize="16" FontWeight="SemiBold"
                              Foreground="#2C3E50"/>

                    <ListBox Grid.Row="1"
                            FontFamily="Consolas" FontSize="11"
                            BorderThickness="1" BorderBrush="#E0E0E0"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            x:Name="LogList">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="NoWrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#555"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Converter={x:Static local:LogColorConverter.Instance}}" Value="Log">
                                                    <Setter Property="Foreground" Value="#2980B9"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={x:Static local:LogColorConverter.Instance}}" Value="Clamp">
                                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={x:Static local:LogColorConverter.Instance}}" Value="AutoDirty">
                                                    <Setter Property="Foreground" Value="#E67E22"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={x:Static local:LogColorConverter.Instance}}" Value="DependsOn">
                                                    <Setter Property="Foreground" Value="#8E44AD"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={x:Static local:LogColorConverter.Instance}}" Value="Timed">
                                                    <Setter Property="Foreground" Value="#27AE60"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="Start Tracking" Click="StartTracking_Click"
                               Padding="10,5" Margin="0,0,6,0"/>
                        <Button Content="Effacer le log" Click="ClearLog_Click"
                               Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Colonne droite : Documentation des aspects -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <StackPanel>
                            <Border Background="#E3F2FD" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                <TextBlock Text="[LogOnChange]" FontFamily="Consolas"
                                          FontWeight="SemiBold" Foreground="#1565C0"/>
                            </Border>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#555">
                                Journalise chaque modification avec timestamp et valeur. Le ViewModel n'a aucun code de log.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <StackPanel>
                            <Border Background="#FFEBEE" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                <TextBlock Text="[Clamp(min, max)]" FontFamily="Consolas"
                                          FontWeight="SemiBold" Foreground="#C62828"/>
                            </Border>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#555">
                                Force la valeur dans [min, max]. Pas de if/else dans le setter — l'aspect intercepte et corrige.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <StackPanel>
                            <Border Background="#FFF3E0" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                <TextBlock Text="[AutoDirty]" FontFamily="Consolas"
                                          FontWeight="SemiBold" Foreground="#E65100"/>
                            </Border>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#555">
                                IsDirty = true si une propriété a changé. Revient a false si toutes les valeurs sont restaurées.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <StackPanel>
                            <Border Background="#F3E5F5" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                <TextBlock Text="[DependsOn(nameof(...))]" FontFamily="Consolas"
                                          FontWeight="SemiBold" Foreground="#7B1FA2" FontSize="12"/>
                            </Border>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#555">
                                Notification en cascade. Modifier Price notifie automatiquement TotalPrice et FullDescription.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <StackPanel>
                            <Border Background="#E8F5E9" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                                <TextBlock Text="[TimedExecution]" FontFamily="Consolas"
                                          FontWeight="SemiBold" Foreground="#2E7D32"/>
                            </Border>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#555">
                                Mesure le temps d'exécution via ExecuteTimed(). En vrai AOP (PostSharp/Fody), l'interception est automatique.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Comparaison avec vrai AOP -->
                    <Border Background="#ECEFF1" CornerRadius="8" Padding="12" Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock Text="AOP en .NET" FontSize="14" FontWeight="SemiBold"
                                      Foreground="#37474F" Margin="0,0,0,8"/>

                            <TextBlock Text="DI + Event (cette démo)" FontWeight="SemiBold"
                                      Foreground="#546E7A" FontSize="11"/>
                            <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#78909C" Margin="0,0,0,8">
                                Conteneur DI attache l'intercepteur. Le ViewModel ne sait pas qu'il est intercepté. Comme Spring AOP.
                            </TextBlock>

                            <TextBlock Text="Compile-time" FontWeight="SemiBold"
                                      Foreground="#546E7A" FontSize="11"/>
                            <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#78909C" Margin="0,0,0,8">
                                Source Generators (CommunityToolkit.Mvvm). Code généré a la compilation. Performant.
                            </TextBlock>

                            <TextBlock Text="IL Weaving" FontWeight="SemiBold"
                                      Foreground="#546E7A" FontSize="11"/>
                            <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#78909C">
                                PostSharp, Fody. Modifient le bytecode IL. Le plus puissant — vrai AOP transparent.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
