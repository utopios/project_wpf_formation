<Window x:Class="CustomAnnotationsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CustomAnnotationsDemo.ViewModels"
        Title="Démo - Création d'annotations personnalisées"
        Height="800" Width="1050"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:RegistrationViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <local:StringToVisibilityConverter x:Key="StringToVis"
                                           xmlns:local="clr-namespace:CustomAnnotationsDemo.Converters"/>

        <!-- Style TextBox avec affichage d'erreur -->
        <Style x:Key="ValidatingTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <AdornedElementPlaceholder x:Name="placeholder"/>
                            <ItemsControl ItemsSource="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}"
                                                   Foreground="#E74C3C" FontSize="11"
                                                   Margin="2,4,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style PasswordBox (même erreur template) -->
        <Style x:Key="ValidatingPasswordBox" TargetType="TextBox" BasedOn="{StaticResource ValidatingTextBox}">
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Colonne gauche: Formulaire d'inscription -->
        <Border Background="White" CornerRadius="8" Padding="25" Margin="0,0,15,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Annotations personnalisées"
                              FontSize="24" FontWeight="Bold"
                              Foreground="#2C3E50" Margin="0,0,0,5"/>
                    <TextBlock Text="Création de ValidationAttribute custom pour WPF"
                              Foreground="Gray" Margin="0,0,0,25"/>

                    <!-- Username : [ContainsNo] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="NOM D'UTILISATEUR *"/>
                        <Run Text="  [ContainsNo]" Foreground="#9B59B6" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged,
                                   ValidatesOnNotifyDataErrors=True}"
                            Style="{StaticResource ValidatingTextBox}"
                            Margin="0,0,0,15"/>

                    <!-- Email : [EmailAddress] standard -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="EMAIL *"/>
                        <Run Text="  [EmailAddress]" Foreground="#3498DB" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged,
                                   ValidatesOnNotifyDataErrors=True}"
                            Style="{StaticResource ValidatingTextBox}"
                            Margin="0,0,0,15"/>

                    <!-- Ancien mot de passe : [NotEqualTo] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="ANCIEN MOT DE PASSE"/>
                        <Run Text="  [NotEqualTo]" Foreground="#E67E22" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <TextBox Text="{Binding OldPassword, UpdateSourceTrigger=PropertyChanged,
                                   ValidatesOnNotifyDataErrors=True}"
                            Style="{StaticResource ValidatingPasswordBox}"
                            Margin="0,0,0,15"/>

                    <!-- Password : [StrongPassword] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="NOUVEAU MOT DE PASSE *"/>
                        <Run Text="  [StrongPassword]" Foreground="#E74C3C" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged,
                                   ValidatesOnNotifyDataErrors=True}"
                            Style="{StaticResource ValidatingPasswordBox}"
                            Margin="0,0,0,3"/>
                    <!-- Indicateur de force -->
                    <TextBlock Margin="2,0,0,15" FontSize="11">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=""/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PasswordStrength}" Value="Faible">
                                        <Setter Property="Text" Value="Force : Faible"/>
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PasswordStrength}" Value="Moyen">
                                        <Setter Property="Text" Value="Force : Moyen"/>
                                        <Setter Property="Foreground" Value="#E67E22"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PasswordStrength}" Value="Bon">
                                        <Setter Property="Text" Value="Force : Bon"/>
                                        <Setter Property="Foreground" Value="#F1C40F"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PasswordStrength}" Value="Fort">
                                        <Setter Property="Text" Value="Force : Fort"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PasswordStrength}" Value="Excellent">
                                        <Setter Property="Text" Value="Force : Excellent"/>
                                        <Setter Property="Foreground" Value="#2ECC71"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Confirm Password : [CustomValidation] cross-property -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="CONFIRMER MOT DE PASSE *"/>
                        <Run Text="  [CustomValidation]" Foreground="#8E44AD" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <TextBox Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged,
                                   ValidatesOnNotifyDataErrors=True}"
                            Style="{StaticResource ValidatingPasswordBox}"
                            Margin="0,0,0,15"/>

                    <!-- Postal Code : [FrenchPostalCode] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="CODE POSTAL *"/>
                        <Run Text="  [FrenchPostalCode]" Foreground="#16A085" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged,
                                   ValidatesOnNotifyDataErrors=True}"
                            Style="{StaticResource ValidatingTextBox}"
                            Width="150" HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <!-- Birth Date : [DateRange] -->
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,5">
                        <Run Text="DATE DE NAISSANCE"/>
                        <Run Text="  [DateRange]" Foreground="#2980B9" FontFamily="Consolas" FontSize="10"/>
                    </TextBlock>
                    <DatePicker SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged,
                                              ValidatesOnNotifyDataErrors=True}"
                               Width="200" HorizontalAlignment="Left"
                               Margin="0,0,0,20"/>

                    <!-- Boutons d'action -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="S'inscrire"
                               Command="{Binding SubmitCommand}"
                               Padding="20,12"
                               Background="#3498DB" Foreground="White"
                               FontWeight="SemiBold"
                               Margin="0,0,10,0"/>
                        <Button Content="Valider tout"
                               Command="{Binding ValidateAllCommand}"
                               Padding="15,12"
                               Margin="0,0,10,0"/>
                        <Button Content="Effacer"
                               Command="{Binding ClearCommand}"
                               Padding="15,12"
                               Margin="0,0,10,0"/>
                        <Button Content="Exemple"
                               Command="{Binding FillSampleCommand}"
                               Padding="15,12"/>
                    </StackPanel>

                    <!-- Message de statut -->
                    <Border Margin="0,20,0,0" CornerRadius="4" Padding="15"
                           Visibility="{Binding StatusMessage, Converter={StaticResource StringToVis}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#FFEBEE"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#C62828"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Colonne droite: Documentation des annotations -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Titre -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,12">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Annotations custom"
                                  FontSize="18" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <TextBlock Text="Héritent de ValidationAttribute" FontSize="12"
                                  Foreground="#7F8C8D" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- 1. FrenchPostalCode -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <Border Background="#E0F2F1" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <TextBlock Text="[FrenchPostalCode]" FontFamily="Consolas"
                                      FontWeight="SemiBold" Foreground="#00796B"/>
                        </Border>
                        <TextBlock Text="Simple - sans paramètre" FontSize="11" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,4"/>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#7F8C8D">
                            Surcharge IsValid(object?). Retourne bool. Le plus simple a creer.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 2. StrongPassword -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <Border Background="#FFEBEE" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <TextBlock Text="[StrongPassword(MinLength=8)]" FontFamily="Consolas"
                                      FontWeight="SemiBold" Foreground="#C62828" FontSize="12"/>
                        </Border>
                        <TextBlock Text="Paramétrable - avec propriétés" FontSize="11" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,4"/>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#7F8C8D">
                            Propriétés publiques sur l'attribut = parametres nommés en XAML/C#. Surcharge IsValid avec ValidationContext pour message dynamique.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 3. NotEqualTo -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <Border Background="#FFF3E0" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <TextBlock Text="[NotEqualTo(nameof(Prop))]" FontFamily="Consolas"
                                      FontWeight="SemiBold" Foreground="#E65100" FontSize="12"/>
                        </Border>
                        <TextBlock Text="Cross-property - entre propriétés" FontSize="11" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,4"/>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#7F8C8D">
                            Utilise ValidationContext.ObjectInstance pour accéder a l'objet complet et comparer les propriétés via réflexion.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 4. DateRange -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <Border Background="#E3F2FD" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <TextBlock Text="[DateRange(MinYearsAgo=120)]" FontFamily="Consolas"
                                      FontWeight="SemiBold" Foreground="#1565C0" FontSize="12"/>
                        </Border>
                        <TextBlock Text="Dynamique - calcul relatif" FontSize="11" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,4"/>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#7F8C8D">
                            La plage valide est calculée relativement a DateTime.Today. Pas de date en dur dans l'attribut.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 5. ContainsNo -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <Border Background="#F3E5F5" CornerRadius="4" Padding="8" Margin="0,0,0,6">
                            <TextBlock FontFamily="Consolas" FontWeight="SemiBold"
                                      Foreground="#7B1FA2" FontSize="12"
                                      Text="[ContainsNo(&quot;admin&quot;, &quot;root&quot;)]"/>
                        </Border>
                        <TextBlock Text="Params - liste variable" FontSize="11" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,4"/>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#7F8C8D">
                            Constructeur avec params string[]. Permet de passer un nombre variable de mots interdits.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Recette -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,12,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Recette pour créer"
                                  FontSize="16" FontWeight="SemiBold"
                                  Foreground="#2C3E50" Margin="0,0,0,10"/>

                        <TextBlock Text="1." FontWeight="Bold" Foreground="#3498DB"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#555" Margin="0,0,0,8">
                            Hériter de ValidationAttribute
                        </TextBlock>

                        <TextBlock Text="2." FontWeight="Bold" Foreground="#3498DB"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#555" Margin="0,0,0,8">
                            Surcharger IsValid(object?) pour un bool simple
                            OU IsValid(object?, ValidationContext) pour un ValidationResult détaillé
                        </TextBlock>

                        <TextBlock Text="3." FontWeight="Bold" Foreground="#3498DB"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#555" Margin="0,0,0,8">
                            Retourner null/true = valide, message/false = erreur
                        </TextBlock>

                        <TextBlock Text="4." FontWeight="Bold" Foreground="#3498DB"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#555">
                            Utiliser avec [NotifyDataErrorInfo] du Toolkit pour validation auto
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
