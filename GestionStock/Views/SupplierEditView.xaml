<UserControl x:Class="GestionStock.Views.SupplierEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:GestionStock.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SupplierEditViewModel}"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="{Binding Title}" Style="{StaticResource PageTitle}"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <!-- Nom -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Nom du fournisseur *"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 MaxLength="100"/>
                        <ItemsControl ItemsSource="{Binding (Validation.Errors), RelativeSource={RelativeSource Self}}"
                                      Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Contact et Email sur 2 colonnes -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nom du contact -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Nom du contact"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding ContactName, UpdateSourceTrigger=PropertyChanged}"
                                     MaxLength="100"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Email"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Téléphone et Adresse sur 2 colonnes -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Téléphone -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Téléphone"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>

                        <!-- Adresse -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Adresse"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                     MaxLength="200"/>
                        </StackPanel>
                    </Grid>

                    <!-- Fournisseur actif -->
                    <CheckBox Content="Fournisseur actif"
                              IsChecked="{Binding IsActive}"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2"
                Padding="0,16,0,0"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource BorderBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Enregistrer"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,12,0"
                        Command="{Binding SaveCommand}"/>
                <Button Content="Annuler"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80FFFFFF"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Chargement..."
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"
                           Style="{StaticResource Caption}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
