<Window x:Class="GestionStock.Views.ProductEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:GestionStock.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ProductEditFormViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="700"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="{Binding Title}"
                   Style="{StaticResource PageTitle}"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <!-- Code -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Code produit *"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 MaxLength="20"/>
                        <TextBlock Text="{Binding CodeError}"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding CodeError, Converter={StaticResource NullToVis}}"/>
                    </StackPanel>

                    <!-- Nom -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Nom du produit *"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                 MaxLength="100"/>
                        <TextBlock Text="{Binding NameError}"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding NameError, Converter={StaticResource NullToVis}}"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Description"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="500"/>
                    </StackPanel>

                    <!-- Grid pour 2 colonnes -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Catégorie -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Catégorie *"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                      SelectedItem="{Binding SelectedCategory}"
                                      DisplayMemberPath="Name"/>
                            <TextBlock Text="{Binding CategoryError}"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="{Binding CategoryError, Converter={StaticResource NullToVis}}"/>
                        </StackPanel>

                        <!-- Fournisseur -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Fournisseur"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding Suppliers}"
                                      SelectedItem="{Binding SelectedSupplier}"
                                      DisplayMemberPath="Name"/>
                        </StackPanel>
                    </Grid>

                    <!-- Grid pour Prix et Stock -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Prix unitaire -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Prix unitaire (€) *"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="{Binding PriceError}"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="{Binding PriceError, Converter={StaticResource NullToVis}}"/>
                        </StackPanel>

                        <!-- Quantité en stock -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Quantité en stock *"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding QuantityInStock, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="{Binding QuantityError}"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="{Binding QuantityError, Converter={StaticResource NullToVis}}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Stock minimum -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Stock minimum"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding MinimumStock, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Produit actif -->
                    <CheckBox Content="Produit actif"
                              IsChecked="{Binding IsActive}"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2"
                Padding="0,16,0,0"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource BorderBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Enregistrer"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,12,0"
                        Command="{Binding SaveCommand}">
                    <!--<Button:EventTrigger>
                        <Button:EventTrigger.Actions>
                            
                        </Button:EventTrigger.Actions>
                    </Button:EventTrigger>-->
                </Button>
                <Button Content="Annuler"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Chargement..."
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"
                           Style="{StaticResource Caption}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
