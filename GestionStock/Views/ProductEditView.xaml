<Window x:Class="GestionStock.Views.ProductEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Édition de produit"
        Height="700"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="TitleText"
                   Text="Nouveau produit"
                   Style="{StaticResource PageTitle}"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <!-- Code -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Code produit *"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="CodeTextBox"
                                 MaxLength="20"/>
                        <TextBlock x:Name="CodeErrorText"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Nom -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Nom du produit *"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="NameTextBox"
                                 MaxLength="100"/>
                        <TextBlock x:Name="NameErrorText"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Description"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="DescriptionTextBox"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="500"/>
                    </StackPanel>

                    <!-- Grid pour 2 colonnes -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Catégorie -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Catégorie *"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <ComboBox x:Name="CategoryComboBox"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"/>
                            <TextBlock x:Name="CategoryErrorText"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Fournisseur -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Fournisseur"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <ComboBox x:Name="SupplierComboBox"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"/>
                        </StackPanel>
                    </Grid>

                    <!-- Grid pour Prix et Stock -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Prix unitaire -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Prix unitaire (€) *"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="PriceTextBox"/>
                            <TextBlock x:Name="PriceErrorText"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Quantité en stock -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Quantité en stock *"
                                       Style="{StaticResource Caption}"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="QuantityTextBox"/>
                            <TextBlock x:Name="QuantityErrorText"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <!-- Stock minimum -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Stock minimum"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="MinStockTextBox"
                                 Width="200"
                                 HorizontalAlignment="Left"/>
                        <TextBlock x:Name="MinStockErrorText"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Produit actif -->
                    <CheckBox x:Name="IsActiveCheckBox"
                              Content="Produit actif"
                              IsChecked="True"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2"
                Padding="0,16,0,0"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource BorderBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Enregistrer"
                        x:Name="SaveButton"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,12,0"
                        Click="SaveButton_Click"/>
                <Button Content="Annuler"
                        x:Name="CancelButton"
                        Style="{StaticResource SecondaryButton}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                x:Name="LoadingOverlay"
                Background="#80FFFFFF"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Chargement..."
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"
                           Style="{StaticResource Caption}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
