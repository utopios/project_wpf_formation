<Window x:Class="GestionStock.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Width="1280" Height="800"
        MinWidth="1024" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Background="{StaticResource NavBackgroundBrush}"
                Width="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToWidth}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo / Header -->
                <Border Padding="16" BorderBrush="#37474F" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“¦" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="GestionStock" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"
                                   Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <StackPanel Grid.Row="1" Margin="0,8">
                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Dashboard">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š" FontSize="16" Width="24"/>
                            <TextBlock Text="Tableau de bord" Margin="12,0,0,0"
                                       Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Products">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" FontSize="16" Width="24"/>
                            <TextBlock Text="Produits" Margin="12,0,0,0"
                                       Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Categories">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ·ï¸" FontSize="16" Width="24"/>
                            <TextBlock Text="CatÃ©gories" Margin="12,0,0,0"
                                       Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Suppliers">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ­" FontSize="16" Width="24"/>
                            <TextBlock Text="Fournisseurs" Margin="12,0,0,0"
                                       Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Movements">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" Width="24"/>
                            <TextBlock Text="Mouvements" Margin="12,0,0,0"
                                       Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>

                    <Separator Background="#37474F" Margin="16,8"/>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" FontSize="16" Width="24"/>
                            <TextBlock Text="ParamÃ¨tres" Margin="12,0,0,0"
                                       Visibility="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Toggle Button -->
                <Button Grid.Row="2" Style="{StaticResource NavButton}"
                        Command="{Binding ToggleNavMenuCommand}"
                        HorizontalContentAlignment="Center"
                        Margin="0,0,0,8">
                    <TextBlock Text="{Binding IsNavMenuExpanded, Converter={StaticResource BoolToArrow}}"
                               FontSize="16"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Notification Bar -->
            <Border Background="{Binding NotificationType, Converter={StaticResource NotificationTypeToColor}}"
                    Visibility="{Binding IsNotificationVisible, Converter={StaticResource BoolToVis}}"
                    Padding="16,8">
                <Grid>
                    <TextBlock Text="{Binding NotificationMessage}"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•" HorizontalAlignment="Right"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            Command="{Binding HideNotificationCommand}"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ContentControl Grid.Row="1"
                            Content="{Binding NavigationService.CurrentViewModel}"
                            Margin="24"/>
        </Grid>
    </Grid>
</Window>
