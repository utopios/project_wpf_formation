<Window x:Class="GestionStock.Views.ProductDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Détails du produit"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock x:Name="ProductNameText"
                           Style="{StaticResource PageTitle}"
                           Margin="0,0,0,4"/>
                <TextBlock x:Name="ProductCodeText"
                           Style="{StaticResource Caption}"/>
            </StackPanel>

            <Border Grid.Column="1"
                    x:Name="StatusBadge"
                    CornerRadius="10"
                    Padding="12,4"
                    VerticalAlignment="Top">
                <TextBlock x:Name="StatusText"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </Border>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Informations générales -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Informations générales"
                                   Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Catégorie -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                                <TextBlock Text="Catégorie"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="CategoryText"
                                           Style="{StaticResource Body}"/>
                            </StackPanel>

                            <!-- Fournisseur -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="12,0,0,12">
                                <TextBlock Text="Fournisseur"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="SupplierText"
                                           Style="{StaticResource Body}"/>
                            </StackPanel>

                            <!-- Prix unitaire -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,12">
                                <TextBlock Text="Prix unitaire"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="PriceText"
                                           Style="{StaticResource Body}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>

                            <!-- Quantité en stock -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,12">
                                <TextBlock Text="Quantité en stock"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="QuantityText"
                                           Style="{StaticResource Body}"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <!-- Stock minimum -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,12">
                                <TextBlock Text="Stock minimum"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="MinStockText"
                                           Style="{StaticResource Body}"/>
                            </StackPanel>

                            <!-- Valeur totale -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="12,0,0,12">
                                <TextBlock Text="Valeur totale"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="TotalValueText"
                                           Style="{StaticResource Body}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource SuccessBrush}"/>
                            </StackPanel>

                            <!-- Statut actif -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Statut"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="ActiveText"
                                           Style="{StaticResource Body}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Description"
                                   Style="{StaticResource SectionTitle}"/>
                        <TextBlock x:Name="DescriptionText"
                                   TextWrapping="Wrap"
                                   Style="{StaticResource Body}"/>
                    </StackPanel>
                </Border>

                <!-- Dates -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Informations de suivi"
                                   Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Date de création -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Date de création"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="CreatedAtText"
                                           Style="{StaticResource Body}"/>
                            </StackPanel>

                            <!-- Date de modification -->
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Dernière modification"
                                           Style="{StaticResource Caption}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="UpdatedAtText"
                                           Style="{StaticResource Body}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2"
                Padding="0,16,0,0"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource BorderBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Modifier"
                        x:Name="EditButton"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,12,0"
                        Click="EditButton_Click"/>
                <Button Content="Fermer"
                        x:Name="CloseButton"
                        Style="{StaticResource SecondaryButton}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
