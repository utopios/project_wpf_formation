                    xmlns:converters="clr-namespace:GestionStock.Resources.Converters">

    <BooleanToVisibilityConverter x:Key="BoolToVis"/>

    <converters:InverseBooleanConverter x:Key="InverseBool"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    <converters:NullToVisibilityConverter x:Key="NullToVis"/>
    <converters:StockStatusConverter x:Key="StockStatus"/>
    <converters:StockStatusColorConverter x:Key="StockStatusColor"/>
    <converters:MovementTypeConverter x:Key="MovementType"/>
    <converters:CurrencyConverter x:Key="Currency"/>
    <converters:BoolToWidthConverter x:Key="BoolToWidth"/>
    <converters:BoolToArrowConverter x:Key="BoolToArrow"/>
    <converters:NotificationTypeToColorConverter x:Key="NotificationTypeToColor"/>

</ResourceDictionary>
