<Application x:Class="GestionStock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GestionStock.ViewModels"
             xmlns:views="clr-namespace:GestionStock.Views"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Base.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Controls.xaml"/>
                <ResourceDictionary Source="Resources/Converters/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- DataTemplates pour la navigation -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ProductListViewModel}">
                <views:ProductListView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ProductDetailViewModel}">
                <views:ProductDetailView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ProductEditViewModel}">
                <views:ProductEditView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:CategoryListViewModel}">
                <views:CategoryListView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SupplierListViewModel}">
                <views:SupplierListView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SupplierEditViewModel}">
                <views:SupplierEditView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:StockMovementViewModel}">
                <views:StockMovementView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
